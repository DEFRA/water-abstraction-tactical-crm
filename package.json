{
  "name": "water-abstraction-tactical-crm",
  "version": "2.23.0",
  "description": "Tactical CRM implementation for water abstraction service",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/DEFRA/water-abstraction-tactical-crm"
  },
  "scripts": {
    "dev": "cd \"$(dirname \"$0\")\" || exit && export $(grep -v '^#' ../water-abstraction-orchestration/secrets/.env | xargs) && export $(grep -v '^#' ../water-abstraction-orchestration/services/variables.env | xargs) && nodemon . ",
    "test": "lab",
    "test:bail": "lab --bail",
    "test:ci": "lab -t 55 -m 0 --coverage-path ./src/ -r lcov -o coverage/lcov.info -r console -o stdout",
    "test-cov-html": "lab -r html -o coverage.html",
    "codecov": "codecov",
    "docs": "jsdoc -c conf.jsdoc.json && cd ./out && serve -o -p 3012",
    "migrate": "node scripts/create-schema && db-migrate up --verbose",
    "migrate:down": "db-migrate down --verbose",
    "migrate:create": "db-migrate create --sql-file --",
    "lint": "eslint .",
    "version": "auto-changelog -p --commit-limit false && git add CHANGELOG.md"
  },
  "engines": {
    "node": ">=8.0"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@hapi/code": "^8.0.7",
    "@hapi/lab": "^24.5.1",
    "auto-changelog": "^1.16.4",
    "codecov": "^3.8.3",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "eslint": "^8.13.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "sinon": "^12.0.1",
    "snyk": "^1.852.0"
  },
  "dependencies": {
    "@envage/hapi-pg-rest-api": "^7.0.0",
    "@envage/water-abstraction-helpers": "4.8.0",
    "@hapi/boom": "^9.1.4",
    "@hapi/good": "^9.0.1",
    "@hapi/hapi": "^20.2.1",
    "@joi/date": "^2.1.0",
    "async-waterfall": "^0.1.5",
    "blipp": "^4.0.2",
    "bookshelf": "^1.2.0",
    "bookshelf-case-converter-plugin": "^1.0.0",
    "deep-map-keys": "^2.0.1",
    "dotenv": "^8.2.0",
    "eslint-utils": "^2.1.0",
    "good-winston": "^4.0.0",
    "hapi-auth-cookie": "^9.1.0",
    "hapi-auth-jwt2": "^8.8.1",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "kind-of": "^6.0.3",
    "knex": "^0.21.1",
    "lodash": "^4.17.21",
    "moment": "^2.24.0",
    "moment-range": "^4.0.2",
    "path": "^0.12.7",
    "pg": "^8.7.3",
    "pluralize": "^8.0.0",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.9",
    "url-join": "^4.0.1",
    "uuid": "^8.3.2"
  }
}
