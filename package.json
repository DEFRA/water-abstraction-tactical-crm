{
  "name": "water-abstraction-tactical-crm",
  "version": "1.31.0",
  "description": "Tactical CRM implementation for water abstraction service",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/DEFRA/water-abstraction-tactical-crm"
  },
  "scripts": {
    "test": "lab",
    "test:travis": "lab -t 55 -m 0 --coverage-path ./src/ -r lcov -o coverage/lcov.info -r console -o stdout",
    "test-cov-html": "lab -r html -o coverage.html",
    "codecov": "codecov",
    "docs": "jsdoc -c conf.jsdoc.json && cd ./out && serve -o -p 3012",
    "migrate": "node scripts/create-schema && db-migrate up --verbose",
    "migrate:down": "db-migrate down --verbose",
    "migrate:create": "db-migrate create --sql-file --",
    "lint": "eslint .",
    "version": "auto-changelog -p --commit-limit false && git add CHANGELOG.md"
  },
  "engines": {
    "node": ">=8.0"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@hapi/code": "^5.2.4",
    "@hapi/lab": "19.1.0",
    "auto-changelog": "^1.14.1",
    "blipp": "4.0.0",
    "codecov": "^3.5.0",
    "db-migrate": "^0.11.6",
    "db-migrate-pg": "^0.3.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "sinon": "^7.3.2",
    "snyk": "^1.199.0"
  },
  "dependencies": {
    "@envage/hapi-pg-rest-api": "^4.1.2",
    "@envage/water-abstraction-helpers": "^3.0.0",
    "@hapi/boom": "7.4.2",
    "@hapi/hapi": "18.3.1",
    "@hapi/joi": "15.1.0",
    "async-waterfall": "^0.1.5",
    "dotenv": "^4.0.0",
    "good": "^8.1.1",
    "good-winston": "^4.0.0",
    "hapi-auth-cookie": "9.0.0",
    "hapi-auth-jwt2": "8.6.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "path": "^0.12.7",
    "pg": "^7.11.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "uuid": "^3.3.2"
  }
}
