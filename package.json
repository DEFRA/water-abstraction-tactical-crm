{
  "name": "water-abstraction-tactical-crm",
  "version": "1.16.0",
  "description": "Tactical CRM implementation for water abstraction service",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/DEFRA/water-abstraction-tactical-crm"
  },
  "scripts": {
    "test": "lab",
    "test:travis": "lab -t 55 -m 0 --coverage-path ./src/ -r lcov -o coverage/lcov.info -r console -o stdout",
    "test-cov-html": "lab -r html -o coverage.html",
    "codecov": "codecov",
    "docs": "jsdoc -c conf.jsdoc.json && cd ./out && serve -o -p 3012",
    "migrate": "node scripts/create-schema && db-migrate up --verbose",
    "migrate:down": "db-migrate down --verbose",
    "migrate:create": "db-migrate create --sql-file --",
    "lint": "eslint ./src/**/*.js",
    "version": "auto-changelog -p --commit-limit false && git add CHANGELOG.md"
  },
  "engines": {
    "node": ">=8.0"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "auto-changelog": "^1.10.2",
    "code": "^5.2.4",
    "codecov": "^3.1.0",
    "db-migrate": "^0.11.1",
    "db-migrate-pg": "^0.3.0",
    "del": "^3.0.0",
    "istanbul": "^0.4.5",
    "lab": "15.5.0",
    "sinon": "^7.2.3",
    "snyk": "^1.116.2",
    "standard": "^10.0.2"
  },
  "dependencies": {
    "@envage/hapi-pg-rest-api": "^4.1.1",
    "airbrake-js": "^1.5.0",
    "async-waterfall": "^0.1.5",
    "blipp": "3.0.0",
    "boom": "7.2.0",
    "dotenv": "^4.0.0",
    "good": "^8.1.1",
    "good-winston": "^4.0.0",
    "hapi": "17.5.1",
    "hapi-auth-cookie": "9.0.0",
    "hapi-auth-jwt2": "8.1.0",
    "hoek": "4.2.1",
    "joi": "13.4.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.5",
    "moment": "^2.20.1",
    "path": "^0.12.7",
    "pg": "^7.7.1",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "uuid": "^3.3.2"
  },
  "standard": {
    "ignore": [
      "node_modules/",
      "public/"
    ]
  }
}
