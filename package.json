{
  "name": "water-abstraction",
  "version": "1.0.0",
  "description": "Web app for Water Abstraction Permit service",
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/lab/bin/lab -t 55 -m 0 --coverage-path ./src/ --ignore r -r lcov -o lcov.info -r console -o stdout",
    "test-cov-html": "lab -r html -o coverage.html",
    "docs": "jsdoc -c conf.jsdoc.json && cd ./out && serve -o -p 3012",
    "migrate": "node scripts/create-schema && node node_modules/db-migrate/bin/db-migrate up --verbose",
    "migrate:down": "db-migrate down --verbose",
    "migrate:create": "db-migrate create --sql-file --"
  },
  "engines": {
    "node": ">=8.0"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "code": "^5.2.0",
    "codecov": "^3.0.2",
    "db-migrate": "^0.11.1",
    "db-migrate-pg": "^0.3.0",
    "del": "^3.0.0",
    "istanbul": "^0.4.5",
    "lab": "15.5.0",
    "run-sequence": "^2.2.1",
    "snyk": "^1.83.0",
    "standard": "^10.0.2"
  },
  "dependencies": {
    "airbrake-js": "^1.1.2",
    "async-waterfall": "^0.1.5",
    "blipp": "3.0.0",
    "boom": "7.2.0",
    "dotenv": "^4.0.0",
    "good": "^8.1.1",
    "good-winston": "^4.0.0",
    "hapi": "17.5.1",
    "hapi-auth-cookie": "9.0.0",
    "hapi-auth-jwt2": "8.1.0",
    "hapi-pg-rest-api": "https://github.com/DEFRA/hapi-pg-rest-api.git#v4.0",
    "hoek": "4.2.1",
    "joi": "13.4.0",
    "jsonwebtoken": "^8.0.0",
    "lodash": "^4.17.5",
    "moment": "^2.20.1",
    "path": "^0.12.7",
    "pg": "^7.4.1",
    "request-promise-native": "^1.0.5",
    "uuid": "^3.2.1"
  },
  "standard": {
    "ignore": [
      "node_modules/",
      "public/"
    ]
  }
}
