{
  "name": "water-abstraction",
  "version": "1.0.0",
  "description": "Web app for Water Abstraction Permit service",
  "main": "index.js",
  "scripts": {
    "heroku-prebuild": "npm install --only=dev",
    "heroku-postbuild": "gulp clean && gulp copy-govuk-files && gulp install-govuk-files && gulp copy-static-assets && gulp sass",
    "test": "snyk test && node node_modules/lab/bin/lab -t 60 -m 0 --coverage-path ./src/",
    "test-cov-html": "lab -r html -o coverage.html",
    "docs": "jsdoc -c conf.jsdoc.json && cd ./out && serve -o -p 3012",
    "migrate": "node scripts/create-schema && node node_modules/db-migrate/bin/db-migrate up --verbose"
  },
  "engines": {
    "node": ">=8.0"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "codecov": "^3.0.0",
    "db-migrate": "^0.10.5",
    "db-migrate-pg": "^0.3.0",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-run-sequence": "^0.3.2",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-standard": "^10.1.2",
    "istanbul": "^0.4.5",
    "lab": "^14.3.2",
    "run-sequence": "^2.2.1",
    "standard": "^10.0.2",
    "snyk": "^1.69.7"
  },
  "dependencies": {
    "async-waterfall": "^0.1.5",
    "bcrypt": "^1.0.3",
    "blipp": "^2.3.0",
    "boom": "^5.2.0",
    "dotenv": "^4.0.0",
    "handlebars": "^4.0.10",
    "handlebars-helper-equal": "^1.0.0",
    "hapi": "^16.5.0",
    "hapi-auth-basic": "^4.2.0",
    "hapi-auth-cookie": "^7.0.0",
    "hapi-auth-jwt2": "^7.4.1",
    "hapi-pg-rest-api": "https://github.com/DEFRA/hapi-pg-rest-api.git",
    "inert": "^4.2.1",
    "joi": "^13.1.2",
    "jsonwebtoken": "^8.0.0",
    "lodash": "^4.17.5",
    "moment": "^2.20.1",
    "node-hapi-airbrake-js": "https://github.com/DEFRA/node-hapi-airbrake-js.git",
    "notifications-node-client": "^3.2.0",
    "path": "^0.12.7",
    "pg": "^7.4.1",
    "request-promise-native": "^1.0.5",
    "vision": "^4.1.1",
    "yar": "^8.1.2"
  },
  "standard": {
    "ignore": [
      "node_modules/",
      "public/"
    ]
  }
}